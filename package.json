{
  "name": "mantrax-launcher",
  "version": "3.0.0",
  "description": "Mantrax Network Minecraft Launcher",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Mantrax Network",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.10"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.mantrax.launcher",
    "productName": "Mantrax Launcher",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    }
  }
}
